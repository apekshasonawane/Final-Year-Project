<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6bc6e7"
    android:orientation="vertical"
    >

    <ScrollView android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/editTexttid"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTextbus_number"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTextdestination"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTextticket_date"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTextticket_time"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTexttotal_elder"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTexttotal_child"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTexttotal_senior"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTexttotal_fair"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/editTextPaypal"
                style="@style/CustomFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@android:color/background_dark"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="10sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />
            <Button
                android:id="@+id/buttonBusTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_button"
                android:text="Print Ticket"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
