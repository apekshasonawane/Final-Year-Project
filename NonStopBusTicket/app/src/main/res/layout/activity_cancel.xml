<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:background="#6bc6e7">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6bc6e7"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/editTextCTicketID"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ticket ID"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextBusNumber"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Bus Number"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCDest"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Destination"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCDate"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Journey Date"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/editTextCTime"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Journey Time"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCElder"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Elder"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCChild"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Child"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCSenior"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Senior Citizen"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/editTextCFair"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Fair"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/buttonCancelTicket2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_button"
        android:text="Cancel Ticket"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</LinearLayout>
</ScrollView>