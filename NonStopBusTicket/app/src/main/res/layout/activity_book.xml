<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6bc6e7"
    android:orientation="vertical"
    >

    <ScrollView android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/editTextBusNumber"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Bus Number"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextDest"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Destination"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextDate"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="प्रवास तारीख"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextTime"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="प्रवास वेळ"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextElder"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Elder"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextChild"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Child"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextSenior"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Senior Citizen"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextFair"
        style="@style/CustomFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Fair"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:lines="1"
        android:padding="10sp"
        android:inputType="number" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/buttonBusTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_button"
        android:text="Buy Ticket"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
